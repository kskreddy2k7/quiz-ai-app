#:import dp kivy.metrics.dp

<AITutorScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(12)
        canvas.before:
            Color:
                rgba: 0.97, 0.98, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "AI Tutor"
            font_size: "22sp"
            bold: True
            color: 0.2, 0.25, 0.45, 1
        ScrollView:
            do_scroll_x: False
            Label:
                text: root.chat_history
                font_size: "14sp"
                color: 0.2, 0.25, 0.35, 1
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        RoundedTextInput:
            id: tutor_input
            hint_text: "Ask a question (e.g., Explain photosynthesis)"
        Label:
            text: root.status_text
            font_size: "13sp"
            color: 0.3, 0.35, 0.5, 1
        PrimaryButton:
            text: "Send"
            on_release: app.send_tutor_question(tutor_input.text)
        SecondaryButton:
            text: "Back to Home"
            on_release: app.go_home()
