#:import Theme app.ui.theme.Theme


<ProgressScreen>:
    canvas.before:
        Color:
            rgba: Theme.color(Theme.BG_DARK)
        Rectangle:
            pos: self.pos
            size: self.size
        # Bottom Glow
        Color:
            rgba: Theme.color(Theme.ACCENT_TEAL, 0.1)
        Ellipse:
            pos: 0, -200
            size: self.width, 400

    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        # --- Header ---
        BoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "12dp"
            # Back Button
            Button:
                text: "‚Üê"
                size_hint: None, None
                size: "44dp", "44dp"
                background_normal: ""
                background_color: 0,0,0,0
                color: Theme.color(Theme.TEXT_SECONDARY)
                on_release: app.go_home()
                canvas.before:
                    Color:
                        rgba: Theme.color(Theme.BG_CARD)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

            Label:
                text: "YOUR JOURNEY"
                font_size: Theme.FONT_H2
                bold: True
                color: Theme.color(Theme.TEXT_PRIMARY)
                halign: "left"
                valign: "middle"
                text_size: self.size

        ScrollView:
            do_scroll_x: False
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "20dp"

                # --- Stats Row ---
                BoxLayout:
                    size_hint_y: None
                    height: "120dp"
                    spacing: "16dp"

                    # Average Score
                    GlassCard:
                        padding: "16dp"
                        Label:
                            text: "AVG SCORE"
                            font_size: "10sp"
                            color: Theme.color(Theme.SECONDARY)
                            size_hint_y: None
                            height: "16dp"
                        Label:
                            text: str(root.average_score) + "%"
                            font_size: "36sp"
                            bold: True
                            color: Theme.color(Theme.PRIMARY)

                    # Streak
                    GlassCard:
                        padding: "16dp"
                        Label:
                            text: "STREAK"
                            font_size: "10sp"
                            color: Theme.color(Theme.ACCENT_YELLOW)
                            size_hint_y: None
                            height: "16dp"
                        Label:
                            text: root.streak_text.replace("Streak: ", "").replace(" days", "") + " üî•"
                            font_size: "36sp"
                            bold: True
                            color: Theme.color(Theme.ACCENT_YELLOW)

                # --- History Section ---
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "12dp"
                    
                    Label:
                        text: "RECENT ACTIVITY"
                        font_size: "12sp"
                        bold: True
                        color: Theme.color(Theme.TEXT_SECONDARY)
                        size_hint_y: None
                        height: "20dp"
                        halign: "left"
                        text_size: self.width, None

                    GlassCard:
                        size_hint_y: None
                        height: max(self.minimum_height, dp(200))
                        padding: "20dp"
                        
                        Label:
                            text: root.history_text
                            font_size: "14sp"
                            line_height: 1.6
                            color: Theme.color(Theme.TEXT_PRIMARY)
                            size_hint_y: None
                            height: self.texture_size[1]
                            halign: "left"
                            valign: "top"
                            text_size: self.width, None
