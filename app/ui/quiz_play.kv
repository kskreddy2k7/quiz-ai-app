<QuizPlayScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.07, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "14dp"
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "‚Üê Back"
                size_hint_x: None
                width: "90dp"
                background_normal: ""
                background_color: 0.16, 0.22, 0.3, 1
                on_release: app.go_home()
            Label:
                text: "Quiz Challenge"
                color: 0.7, 0.9, 1, 1
                bold: True
        Label:
            text: root.progress_text
            font_size: "13sp"
            color: 0.6, 0.8, 1, 0.9
            size_hint_y: None
            height: self.texture_size[1]
        Label:
            text: root.question_text
            font_size: "18sp"
            color: 0.9, 0.95, 1, 1
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: options_container
                cols: 1
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height
