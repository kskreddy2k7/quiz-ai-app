<ResultsScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.07, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "12dp"
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "← Home"
                size_hint_x: None
                width: "90dp"
                background_normal: ""
                background_color: 0.16, 0.22, 0.3, 1
                on_release: app.go_home()
            Label:
                text: "Quiz Results"
                color: 0.7, 0.9, 1, 1
                bold: True
        Label:
            text: root.score_text
            font_size: "20sp"
            color: 0.85, 0.9, 1, 1
            size_hint_y: None
            height: self.texture_size[1]
        Label:
            text: root.encouragement_text
            font_size: "14sp"
            color: 0.6, 0.9, 0.7, 1
            size_hint_y: None
            height: self.texture_size[1]
        Label:
            text: "Last explanation:"
            font_size: "13sp"
            color: 0.7, 0.8, 0.9, 1
            size_hint_y: None
            height: self.texture_size[1]
        ScrollView:
            do_scroll_x: False
            Label:
                text: root.explanation_text
                font_size: "13sp"
                color: 0.85, 0.9, 1, 0.85
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        Button:
            text: "Try Another Quiz ✅"
            size_hint_y: None
            height: "52dp"
            background_normal: ""
            background_color: 0.35, 0.55, 0.9, 1
            on_release: app.go_quiz_setup()
