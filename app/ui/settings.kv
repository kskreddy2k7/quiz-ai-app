#:import Theme app.ui.theme.Theme

<SettingsScreen>:
    canvas.before:
        Color:
            rgba: Theme.color(Theme.BG_DARK)
        Rectangle:
            pos: self.pos
            size: self.size
        # Background Detail
        Color:
            rgba: Theme.color(Theme.PRIMARY, 0.05)
        Line:
            circle: (self.center_x, self.center_y, 300)
            width: 1

    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        # --- Header ---
        BoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "12dp"
            Button:
                text: "‚Üê Back"
                size_hint: None, None
                size: "80dp", "44dp"
                background_normal: ""
                background_color: 0,0,0,0
                color: Theme.color(Theme.TEXT_SECONDARY)
                on_release: app.go_home()
                canvas.before:
                    Color:
                        rgba: Theme.color(Theme.BG_CARD)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8]
            
            Label:
                text: "SETTINGS"
                font_size: Theme.FONT_H2
                bold: True
                color: Theme.color(Theme.TEXT_PRIMARY)
                halign: "left"
                valign: "middle"
                text_size: self.size

        # --- API Key Section ---
        GlassCard:
            size_hint_y: None
            height: "200dp"
            padding: "20dp"
            spacing: "16dp"
            orientation: "vertical"

            Label:
                text: "AI CONFIGURATION"
                font_size: "12sp"
                bold: True
                color: Theme.color(Theme.ACCENT_TEAL)
                size_hint_y: None
                height: "20dp"
                halign: "left"
                text_size: self.width, None

            Label:
                text: "OpenAI API Key"
                font_size: "14sp"
                color: Theme.color(Theme.TEXT_PRIMARY)
                size_hint_y: None
                height: "20dp"
                halign: "left"
                text_size: self.width, None

            AnimatedInput:
                id: api_key_input
                hint_text: "sk-..."
                password: True
                multiline: False
                on_text: root.api_key = self.text

            NeonButton:
                text: "Save Key üíæ"
                size_hint_y: None
                height: "44dp"
                on_release: root.save_key()

        # --- Status ---
        Label:
            text: root.status_text
            font_size: "14sp"
            color: Theme.color(Theme.ACCENT_TEAL)
            size_hint_y: None
            height: "40dp"
            opacity: 1 if root.status_text else 0

        Widget:
            # Spacer
