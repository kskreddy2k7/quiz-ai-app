#:import Theme app.ui.theme.Theme

<SplashScreen>:
    canvas.before:
        Color:
            rgba: Theme.get_color(Theme.BG_DARK)
        Rectangle:
            pos: self.pos
            size: self.size
            
        # Background Digital Grid (Subtle)
        Color:
            rgba: Theme.get_color(Theme.PRIMARY_START, 0.05)
        Line:
            points: [0, self.height/3, self.width, self.height/3]
            width: 1
        Line:
            points: [0, self.height*2/3, self.width, self.height*2/3]
            width: 1
        
        # Central Glow
        Color:
            rgba: Theme.get_color(Theme.PRIMARY_START, 0.15)
        Ellipse:
            pos: self.center_x - dp(150), self.center_y - dp(150)
            size: dp(300), dp(300)

    BoxLayout:
        orientation: "vertical"
        padding: dp(32)
        spacing: dp(24)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.8, 0.6
        
        Label:
            id: logo_label
            text: "S QUIZ"
            font_size: "64sp"
            bold: True
            font_name: Theme.FONT_HEADINGS
            color: Theme.get_color(Theme.PRIMARY_START)
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            opacity: 0 # Start invisible for animation
            
        Label:
            id: tagline_label
            text: "CREATED BY SAI"
            font_size: "18sp"
            letter_spacing: dp(5)
            font_name: Theme.FONT_BODY
            color: Theme.get_color(Theme.ACCENT_CYAN)
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            opacity: 0 # Start invisible
