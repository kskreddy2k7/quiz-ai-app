QuizLayout:
    orientation: "vertical"
    padding: 10
    spacing: 10

    Label:
        id: question
        text: "Select a file and start quiz"
        size_hint_y: None
        height: 200
        text_size: self.width, None

    BoxLayout:
        id: options
        orientation: "vertical"
        spacing: 5

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Select File"
            on_press: app.pick_file()

        Button:
            text: "Start Quiz"
            on_press: app.start_quiz()
